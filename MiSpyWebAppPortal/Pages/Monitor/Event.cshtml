@page
@model MiSpyWebAppPortal.Pages.Monitor.EventModel
@{
    ViewData["Title"] = "Logged Event Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Logged Event Details</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page-handler="CreateDocument">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LoggedEvent.Id" />
            <div class="form-group">
                <label asp-for="LoggedEvent.Event" class="control-label"></label>
                <input asp-for="LoggedEvent.Event" class="form-control" disabled/>
                <span asp-validation-for="LoggedEvent.Event" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoggedEvent.Time" class="control-label"></label>
                <input asp-for="LoggedEvent.Time" class="form-control" disabled/>
                <span asp-validation-for="LoggedEvent.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoggedEvent.UserId" class="control-label"></label>
                <input asp-for="LoggedEvent.UserId" class="form-control" disabled/>
                <span asp-validation-for="LoggedEvent.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Export Report" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./NewReport">Back to List</a>
</div>

